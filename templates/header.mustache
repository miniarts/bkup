<header role="banner" class="pos-f-t navbar navbar-full navbar-static-top moodle-has-zindex {{ output.navbar_inverse }}">

    <div class="container-fluid navbar-nav">

        <div data-region="drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn pull-xs-left m-r-1 navbar-toggler" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav"><span aria-hidden="true"><i class="fa fa-bars" aria-hidden="true"></i></span><span class="sr-only">{{#str}}expand, core{{/str}}</span></button>
        </div>

        <!-- a href="{{{ config.wwwroot }}}" class="navbar-brand {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}
